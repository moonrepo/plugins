{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "client#build": {
      "dependsOn": ["^build"],
      "outputs": ["client/**"]
    },
    "server#build": {
      "dependsOn": ["^build"],
      "outputs": ["server/**"]
    }
  }
}
