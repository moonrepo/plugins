---
source: extensions/migrate-nx/tests/migrate_nx_test.rs
expression: "fs::read_to_string(sandbox.path().join(\"moon.yml\")).unwrap()"
---
language: javascript
tasks:
  noop:
    command: noop
  run-env:
    command: echo 'foo'
    env:
      FOO: '123'
      BAR: abc
      BAZ: 'true'
    toolchains: system
  run-env-file:
    command: echo 'foo'
    options:
      envFile: .env.production
    toolchains: system
  run-multiple:
    command: mkdir -p apps/frontend/scripts && touch apps/frontend/scripts/my-script.sh && chmod +x apps/frontend/scripts/my-script.sh
    toolchains: system
  run-single:
    command: ls apps/frontend/src
    toolchains: system
  run-with-cwd:
    command: mkdir -p scripts
    env:
      CWD: apps/frontend
    outputs:
    - glob: scripts/**/*
    toolchains: system
  script:
    command: yarn run build
  script-alt:
    command: yarn run build
    outputs:
    - file: dist
    - file: docs
toolchains:
  default: node
